<Window x:Class="JitExplorer.MainWindow"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JitExplorer"
        mc:Ignorable="d"
        Title="JitExplorer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="Jit" Grid.Column="3" Click="Jit_Click">Jit</Button>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--TextBox Name="SourceCode" Grid.Column="0" AcceptsReturn="True" FontFamily="Courier New" /-->
            <avalonedit:TextEditor x:Name="CodeEditor"
                               Grid.Column="0"
                               SyntaxHighlighting="C#" 
                               ShowLineNumbers="True"
                               FontFamily="Courier New">
             
            </avalonedit:TextEditor>
            <!--TextBox Name="Assembly" Grid.Column="1" AcceptsReturn="True" FontFamily="Courier New" /-->
            <avalonedit:TextEditor Name="AssemblerView"
                               Grid.Column="1"
                               IsReadOnly="True"
                               ShowLineNumbers="False"
                               SyntaxHighlighting="BUILD_MSG"
                               WordWrap="True"
                               FontFamily="Courier New">
            </avalonedit:TextEditor>
        </Grid>
    </Grid>
</Window>
