<mah:MetroWindow x:Class="JitExplorer.MainWindow"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:JitExplorer"
        mc:Ignorable="d"
        Title="JitExplorer" TitleCharacterCasing="Normal" TitleForeground="{DynamicResource MahApps.Brushes.SemiTransparent}"
        Height="450" Width="800" 
        BorderThickness="0.5" BorderBrush="DarkOrange">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/VS/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/VS/Menu.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        
        <Menu Grid.Row="0">
            <MenuItem Header="_File" HorizontalContentAlignment="Left">
                <MenuItem Header="_Open" Click="OpenFile"/>
                <MenuItem Header="_Save Source" Click="SaveCode"/>
                <MenuItem Header="Save Assembler"  Click="SaveDissassemble"/>
                <Separator />
                <MenuItem Header="_Exit" Click="Exit" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <!--<ColumnDefinition ></ColumnDefinition>--><!-- TEMP -->
            </Grid.ColumnDefinitions>
            <avalonedit:TextEditor x:Name="CodeEditor"
                               Grid.Column="0"
                               SyntaxHighlighting="C#" 
                               ShowLineNumbers="True"
                               MinWidth="5">
            </avalonedit:TextEditor>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="{DynamicResource MahApps.Brushes.WindowTitle}" />
            <avalonedit:TextEditor Name="AssemblerView" 
                               Grid.Column="2"
                               IsReadOnly="True"
                               ShowLineNumbers="False"
                               SyntaxHighlighting="Asm"
                               WordWrap="True"
                               MinWidth="5">
            </avalonedit:TextEditor>
            <!-- TEMP -->
            <!--<ScrollViewer Grid.Column="3" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                <TextBox AcceptsReturn="True" TextWrapping="NoWrap"   Background="{DynamicResource MahApps.Brushes.Background}" >dsfsdf</TextBox>
            </ScrollViewer>-->
            <!-- TEMP -->
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,5,0,15">
            <ComboBox Name="BuildConfig" Grid.Column="0" BorderBrush="{DynamicResource MahApps.Brushes.Border.Normal}">
                <ComboBoxItem IsSelected="True">Release</ComboBoxItem>
                <ComboBoxItem>Debug</ComboBoxItem>
            </ComboBox>
            <ComboBox Name="Platform" Grid.Column="1" BorderBrush="{DynamicResource MahApps.Brushes.Border.Normal}" Margin="5,0">
                <ComboBoxItem IsSelected="True">x64</ComboBoxItem>
                <ComboBoxItem>x86</ComboBoxItem>
                <ComboBoxItem>AnyCpu</ComboBoxItem>
            </ComboBox>
            <CheckBox Name="TieredCompilation" Grid.Column="2" Margin="5,0" BorderBrush="{DynamicResource MahApps.Brushes.Border.Normal}" >Tiered Compilation</CheckBox>

            <Button Name="Tiered" Grid.Column="3" Margin="5,0,5,0" ToolTip="Tiered JIT">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Name="TieredIcon" Icon="Cubes" Height="14" Width="14" Margin="2,2,0,0" Foreground="MediumPurple" />
                </StackPanel>
            </Button>
            <Button Name="QuickJit" Grid.Column="3" Margin="5,0,5,0" ToolTip="Quick JIT">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Name="QuickJitIcon" Icon="FastForward" Height="10" Width="10" Margin="2,2,0,0" Foreground="MediumPurple"/>
                </StackPanel>
            </Button>
            <Button Name="LoopJit" Grid.Column="3" Margin="5,0,5,0" ToolTip="Quick Loop JIT">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Name="LoopJitIcon" Icon="Info" Height="10" Width="10" Margin="2,2,0,0" Foreground="MediumPurple"/>
                </StackPanel>
            </Button>
            <Button Name="Legacy" Grid.Column="3" Margin="5,0,5,0" ToolTip="Legacy JIT">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Name="LegacyIcon" Icon="FortAwesome" Height="10" Width="10" Margin="2,2,0,0" Foreground="MediumPurple"/>
                </StackPanel>
            </Button>
            <Button Name="Jit" Grid.Column="3" Click="Jit_Click" ToolTip="Dissassemble source code using selected Compile and JIT options">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Name="JitIcon" Icon="Play" Height="10" Width="10" Margin="2,2,0,0" Foreground="LightGreen"/>
                    <TextBlock Margin="5,0,0,0">Dissassemble</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <!--<Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

        </Grid>-->
        <StatusBar Grid.Row="3">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <fa:ImageAwesome Name="ProgressIcon" Icon="Stop" Height="12" Width="12" Margin="2,2,0,0" Foreground="DarkOrange"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <TextBlock Name="StatusText" Text="Ready" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
